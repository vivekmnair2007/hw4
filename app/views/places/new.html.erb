<h2>New Place</h2>

<% if @user != nil %>
  <form action="/places" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="name_input" class="form-label">Name</label>
      <input type="text" name="name" id="name_input" class="form-control">
    </div>
    <button class="btn btn-primary">Save</button>
    <a href="/posts">Cancel</a>
  </form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>